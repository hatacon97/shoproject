
  <style>
    #carousalImg{
      width: 1000px;
      height: 750px;
    }
    
  </style>
  <body>
    <section>      
        <div id="carouselExampleCaptions" class="carousel slide" data-bs-ride="carousel">
            <div class="carousel-indicators">
              <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
              <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="1" aria-label="Slide 2"></button>
              <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="2" aria-label="Slide 3"></button>
            </div>
            <div class="carousel-inner">
              <div class="carousel-item active">
                <img src="../<%= results[0].PROD_IMG %>" class="d-block w-100" id="carousalImg" alt="...">
                <div class="carousel-caption d-none d-md-block">
                  <h5><%= results[0].PROD_NM %></h5>
                  <p><%= results[0].PROD_DETAIL %></p>
                </div>
              </div>
              <div class="carousel-item active">
                <img src="../<%= results[1].PROD_IMG %>" class="d-block w-100" id="carousalImg" alt="...">
                <div class="carousel-caption d-none d-md-block">
                  <h5><%= results[1].PROD_NM %></h5>
                  <p><%= results[1].PROD_DETAIL %></p>
                </div>
              </div>
              
            </div>      
            <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="prev">
              <span class="carousel-control-prev-icon" aria-hidden="true"></span>
              <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="next">
              <span class="carousel-control-next-icon" aria-hidden="true"></span>
              <span class="visually-hidden">Next</span>
            </button>
          </div>
          
    </section>
<!-- Start Trending Product Section-->
<section class="trending-product section" style="margin-top: 12px;">
  <div class="container">
      <div class="row">
          <div class="col-12">
              <div class="section-title">
                  <h2>인기 품목</h2>
              </div>
          </div>
      </div>
      <div class="row">
        <% for(i=0; i < results.length; i++){ %>
          <div class="col-lg-3 col-md-6 col-12">
              <!-- Start Single Product -->
              <div class="single-product">
                  <div class="product-image">
                      <img src="../<%= results[i].PROD_IMG %>" alt="#">
                      <div class="button">
                          <a href="product-detail?PROD_NO=<%=results[i].PROD_NO %>" class="btn"><i class="lni lni-cart"></i>제품 상세</a>
                      </div>
                  </div>
                  <div class="product-info">
                      <span class="category" id="category"><%= results[i].PROD_DIV %></span>
                      <h4 class="title">
                          <a href="product-detail?PROD_NO=<%=results[i].PROD_NO %>"><%= results[i].PROD_NM %></a>
                      </h4>
                      <ul class="review">
                          <li><i class="lni lni-star-filled"></i></li>
                          <li><i class="lni lni-star-filled"></i></li>
                          <li><i class="lni lni-star-filled"></i></li>
                          <li><i class="lni lni-star-filled"></i></li>
                          <li><i class="lni lni-star"></i></li>
                          <li><span>4.0 Review(s)</span></li>
                      </ul>
                      <div class="price">
                          <span><%= results[i].PROD_PRICE %>원 (kg)</span>
                      </div>
                  </div>
              </div>
              
              <!-- End Single Product -->
          </div>
          <% } %>
          
          </div>
      </div>
  </div>
</section>
</body>

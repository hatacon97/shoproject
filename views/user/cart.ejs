
    <style>
        .mb-3{
            margin: 20px;
        }
        .d-grid{
            margin: 20px;
        }
        .tit{
          text-align: center;
          margin-top: 17px;
        }

    </style>
<body>
  
    <h1 class="tit">장바구니</h1>
    <div class="container my-5">
      <div class="row p-4 pb-0 pe-lg-0 pt-lg-5 align-items-center rounded-3 border shadow-lg">
        <% if(cartProduct.length != 0) { %>
          <div class="col-lg-3 col-md-6 col-12">
            <!-- Start Single Product -->
            <div class="single-product">
                <div class="product-image">
                    <img src="../<%= cartProduct[i].PROD_IMG %>" alt="#">
                    <div class="button">
                        <a href="#" class="btn"><i class="lni lni-cart"></i> Add to Cart</a>
                    </div>
                </div>
                <div class="product-info">
                    <span class="category" id="category"></span>
                    <h4 class="title">
                        <a href="product-detail?PROD_NO=<%=cartProduct[i].PROD_NO %>"><%= cartProduct[i].PROD_NM %></a>
                    </h4>
                    <ul class="review">
                        <li><i class="lni lni-star-filled"></i></li>
                        <li><i class="lni lni-star-filled"></i></li>
                        <li><i class="lni lni-star-filled"></i></li>
                        <li><i class="lni lni-star-filled"></i></li>
                        <li><i class="lni lni-star"></i></li>
                        <li><span>4.0 Review(s)</span></li>
                    </ul>
                </div>
            </div>
            <!-- End Single Product -->
        </div>
        <% } else { %>
          <h2> 장바구니에 상품이 존재하지 않습니다. </h2>
          <% } %>
        <div class="col-lg-4 col-md-4 col-12" style="margin-left:auto">
          <div class="form-group">
            <h4 id="fullPrice">결제 금액: </h4>
          </div>
        </div>
      </div>
    </div>
  
  </body>
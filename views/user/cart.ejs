
    <style>
        .mb-3{
            margin: 20px;
        }
        .d-grid{
            margin: 20px;
        }
        .tit{
          text-align: center;
          margin-top: 17px;
        }
        .no_prod {
          margin-bottom: 25px;
        }
        #prod_card {
            margin-bottom: 25px;
        }
        .prod_cnt{
            size: 20px;
            
        }
        #buy_cart{
            float: right;
            margin: 10px;
        }
    </style>
<body>
  
    <h1 class="tit">장바구니</h1>
    <div class="container my-5">
      <div class="row p-4 pb-0 pe-lg-0 pt-lg-5 align-items-center rounded-3 border shadow-lg">
        <% if(cartProduct.length != 0) { 
          for(i=0; i < cartProduct.length; i++) { %>
          <div class="col-lg-3 col-md-6 col-12" id="prod_card">
            <!-- Start Single Product -->
            <form id="cartForm" method="POST" action="">
            <input type="hidden" id="cartChk" name="cartChk">
            <input type="checkbox" id="chk" name="chk" value="<%=cartProduct[i].PROD_NO %>">
            <div class="single-product">
                <div class="product-image">
                    <img src="../<%= cartProduct[i].PROD_IMG %>" alt="#">
                </div>
                <div class="product-info">
                    <span class="category" id="category"></span>
                    <h4 class="title">
                        <a href="product-detail?PROD_NO=<%=cartProduct[i].PROD_NO %>"><%= cartProduct[i].PROD_NM %></a>
                    </h4>
                    <div class="prod_cnt">
                        선택된 수량 : <%= cartProduct[i].PROD_CNT %>
                    </div>
                    <div class="prod_cnt">
                        총 합계 : <%=cartProduct[i].SUM_PRICE %>
                    </div>
                </div>
            </div>
        </form>
            <!-- End Single Product -->
        </div>
        <% } %>
        <% } else { %>
          <h2 class="no_prod"> 장바구니에 상품이 존재하지 않습니다. </h2>
          <% } %>
        <div class="button cart-button">
            <button class="btn" id="buy_cart">상품 구매</button>
        </div>
      </div>
    </div>
  
  </body>
  <script>
    window.onload = function(){
        $("#buy_cart").click(function() {
            if(confirm("구매하시겠습니까?") == true){
                var chkArr = [];
                $("input[name=chk]:checked").each(function (){
                    chkArr.push($(this).val());
                });
                console.log(chkArr);
                $('#cartChk').val(chkArr);
                console.log($('#cartChk'));
                    $("#cartForm").attr("action", "payment");
                    $("#cartForm").submit();
            } else {
                return;
            };
        });
    }
  </script>